<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--HorizontalStyle-->
    <declare-styleable name="HorizontalProgressView">
        <attr name="track_width" />
        <attr name="start_progress" />
        <attr name="end_progress" />
        <attr name="start_color" />
        <attr name="end_color" />
        <attr name="isTracked" />
        <attr name="trackColor" />
        <attr name="progressDuration" />
        <attr name="progressTextVisibility" />
        <attr name="progressTextColor" />
        <attr name="progressTextSize" />
        <attr name="animateType" />
        <attr name="corner_radius" format="dimension" />
        <attr name="text_padding_bottom" format="dimension" />
        <attr name="textMovedEnable" format="boolean" />
    </declare-styleable>



    <declare-styleable name="ColorfulProgressbarStatic">
        <attr name="style" format="string|reference"/>
        <attr name="animation" format="boolean"/>
        <attr name="maxProgress" format="integer|reference"/>
        <attr name="currentProgress" format="integer|reference"/>
        <attr name="secondProgress" format="integer|reference"/>
        <attr name="backgroundColor" format="color|reference"/>
        <attr name="progressColor1" format="color|reference"/>
        <attr name="progressColor2" format="color|reference"/>
    </declare-styleable>

    <!--CircleStyle-->
    <declare-styleable name="CircleProgressView">

        <attr name="track_width" />
        <attr name="start_progress" />
        <attr name="end_progress" />
        <attr name="start_color" />
        <attr name="end_color" />
        <attr name="isTracked" />
        <attr name="trackColor" />
        <attr name="progressDuration" />
        <attr name="progressTextVisibility" />
        <attr name="progressTextColor" />
        <attr name="progressTextSize" />
        <attr name="animateType" />
        <attr name="isFilled" format="boolean" />
        <attr name="circleBroken" format="boolean" />
        <attr name="isGraduated" format="boolean" />
        <attr name="scaleZone_width" format="dimension" />
        <attr name="scaleZone_length" format="dimension" />
        <attr name="scaleZone_corner_radius" format="dimension" />
        <attr name="scaleZone_padding" format="dimension" />

    </declare-styleable>
    <dimen name="default_trace_width">16dp</dimen>
    <dimen name="default_progress_text_size">28sp</dimen>
    <dimen name="default_corner_radius">5dp</dimen>
    <dimen name="default_horizontal_text_size">14sp</dimen>
    <dimen name="default_zone_length">22dp</dimen>
    <dimen name="default_zone_width">6dp</dimen>
    <dimen name="default_zone_padding">16dp</dimen>
    <dimen name="default_zone_corner_radius">8dp</dimen>

    <declare-styleable name="GlideCircleProgressView">
        <attr name="cpv_progressNormalColor" format="color" />
        <attr name="cpv_progressReachColor" format="color" />
        <attr name="cpv_progressTextColor" format="color" />
        <attr name="cpv_progressTextSize" format="dimension" />
        <attr name="cpv_progressTextOffset" format="dimension" />
        <attr name="cpv_progressNormalSize" format="dimension" />
        <attr name="cpv_progressReachSize" format="dimension" />
        <attr name="cpv_radius" format="dimension" />
        <attr name="cpv_progressTextVisible" format="boolean" />
        <attr name="cpv_progressStartArc" format="integer" />
        <attr name="cpv_progressTextSkewX" format="dimension" />
        <attr name="cpv_progressTextPrefix" format="string" />
        <attr name="cpv_progressTextSuffix" format="string" />
        <attr name="cpv_innerBackgroundColor" format="color" />
        <attr name="cpv_progressStyle" format="enum">
            <enum name="Normal" value="0" />
            <enum name="FillInner" value="1" />
            <enum name="FillInnerArc" value="2" />
        </attr>
        <attr name="cpv_innerProgressColor" format="color" />
        <attr name="cpv_innerPadding" format="dimension" />
        <attr name="cpv_outerColor" format="color" />
        <attr name="cpv_outerSize" format="dimension" />
        <attr name="cpv_reachCapRound" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MZBannerView">
        <attr name="open_mz_mode" format="boolean" />
        <attr name="canLoop" format="boolean" />
        <attr name="indicatorPaddingLeft" format="dimension" />
        <attr name="indicatorPaddingRight" format="dimension" />
        <attr name="indicatorPaddingTop" format="dimension" />
        <attr name="indicatorPaddingBottom" format="dimension" />
        <attr name="indicatorAlign">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="middle_page_cover" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ExpandableTextView">
        <attr name="ep_max_line" format="integer" />
        <!--是否需要展开-->
        <attr name="ep_need_expand" format="boolean" />
        <!--是否需要收起 这个是建立在开启展开的基础上的-->
        <attr name="ep_need_contract" format="boolean" />
        <!--是否需要动画-->
        <attr name="ep_need_animation" format="boolean" />
        <!--收起的文案-->
        <attr name="ep_contract_text" format="string" />
        <!--展开的文案-->
        <attr name="ep_expand_text" format="string" />
        <!--展开的文字的颜色-->
        <attr name="ep_expand_color" format="color" />
        <!--收起的文字的颜色-->
        <attr name="ep_contract_color" format="color" />
        <!--在收回和展开前面添加的内容的字体颜色-->
        <attr name="ep_end_color" format="color" />
        <!--链接的文字的颜色-->
        <attr name="ep_link_color" format="color" />
        <!--链接的图标-->
        <attr name="ep_link_res" format="reference" />
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="enableCenterDrawables" format="boolean" />
        <attr name="enableTextInCenter" format="boolean" />
        <attr name="drawableStartWidth" format="dimension" />
        <attr name="drawableStartHeight" format="dimension" />
        <attr name="drawableTopWidth" format="dimension" />
        <attr name="drawableTopHeight" format="dimension" />
        <attr name="drawableEndWidth" format="dimension" />
        <attr name="drawableEndHeight" format="dimension" />
        <attr name="drawableBottomWidth" format="dimension" />
        <attr name="drawableBottomHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LoadingButton">
        <attr name="enableShrink" format="boolean" />
        <attr name="disableClickOnLoading" format="boolean" />
        <attr name="shrinkDuration" format="integer" />
        <attr name="loadingEndDrawableSize" format="dimension" />
        <attr name="loadingDrawableColor" format="color" />
        <attr name="loadingDrawablePosition" format="enum">
            <enum name="Start" value="0" />
            <enum name="Top" value="1" />
            <enum name="End" value="2" />
            <enum name="Bottom" value="3" />
        </attr>

        <attr name="endCompleteDrawable" format="reference" />
        <attr name="endFailDrawable" format="reference" />
        <attr name="endDrawableAppearTime" format="integer" />
        <attr name="endDrawableDuration" format="integer" />
    </declare-styleable>



    <!--注意：自定义属性的名称必须和 自定义view的类名 一样在布局文件中才会有提示！-->
    <declare-styleable name="YPKTabLayoutView">
        <attr name="tabTextColor" format="color" />
        <attr name="tabTextSize" format="dimension" />

        <attr name="tab_view_bg" format="color" />
        <attr name="select_tab_color" format="color" />
        <!--值越大，弧度越大-->
        <attr name="arcControlX" format="integer" />
        <!--圆角的大小-->
        <attr name="view_bg_corners" format="dimension" />
    </declare-styleable>

</resources>