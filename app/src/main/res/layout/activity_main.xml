<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.csx.mytestdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/rxjava_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RxJava测试"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/mvp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mvp测试"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="万能dialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/video_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video播放"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/drag_rv_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拖动的RecyclerView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/audio_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="录音demo"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/bottom_bar_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="底部导航栏(有消息红点)"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>
